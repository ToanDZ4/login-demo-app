{
  "name": "login-demo-app",
  "version": "1.0.0",
  "description": "Login demo application with React and Node.js",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/server.ts",
    "client": "cd client && npm start",
    "build": "tsc && cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
